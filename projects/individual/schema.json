{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://csc3213-2026-group-b.github.io/public-json-schemas/projects/individual/schema.json",
  "title": "Individual Project Metadata",
  "type": "object",
  "required": [
    "course",
    "title",
    "repository_name",
    "student",
    "supervisors",
    "tags"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "Optional schema reference for editors and validators"
    },
    "course": {
      "type": "string",
      "description": "Course code (e.g., CSCXXXX)"
    },
    "title": {
      "type": "string",
      "description": "Project title"
    },
    "repository_name": {
      "type": "string",
      "description": "GitHub repository name"
    },
    "student": {
      "type": "object",
      "required": ["sNumber", "name", "mail"],
      "properties": {
        "sNumber": {
          "type": "string",
          "description": "Student registration number (e.g., S/YY/XXX)"
        },
        "name": {
          "type": "string"
        },
        "mail": {
          "type": "string",
          "format": "email"
        }
      },
      "additionalProperties": false
    },
    "supervisors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "email"],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        },
        "additionalProperties": false
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
